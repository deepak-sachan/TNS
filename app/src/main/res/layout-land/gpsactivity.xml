<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" 
    >
<TableLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="#d8e9ec">
    
    <TableRow android:gravity="center">
	        <TextView android:id="@+id/txtgetGPSdata"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Get GPS Data"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            />
    </TableRow>
     <TableRow 
        android:layout_marginTop="5dp">
        	<TextView android:text="TWR Type"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            />

        	<Spinner
       	       android:id="@+id/spinner1"
       	       android:layout_width="160dp"
       	       android:layout_height="wrap_content"
	           android:gravity="center"
	           android:textSize="11sp"
	           android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
	           android:layout_marginLeft="50dp"
        	     />
        	
    </TableRow>
    <TableRow 
        android:layout_marginTop="5dp">
        	<TextView android:text="TWR Height"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            />
        	<EditText android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:id="@+id/tyrHight"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_marginLeft="50dp"
            />
    </TableRow>
    
    <TableRow 
        android:layout_marginTop="5dp">
        	<TextView android:text="Latitude"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            />
        	<EditText android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:id="@+id/edLatitude"
            android:gravity="center"
            android:textSize="11sp"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
            android:layout_marginLeft="50dp"
            />
    </TableRow>
    <TableRow android:layout_marginTop="5dp">
        	<TextView android:text="Longitude"
           android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            />
        	<EditText android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:id="@+id/edLongitude"
            android:textSize="11sp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            />
    </TableRow>
   
    <TableRow android:layout_marginTop="5dp">
        	<TextView android:text="Survey Date"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            />
        	<EditText android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:id="@+id/edLastUpdated"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            />
    </TableRow>
     <TableRow >
        	<TextView android:text="Setellite info"
            android:layout_height="wrap_content"
            android:layout_width="160dp"
            android:layout_marginLeft="50dp"
            android:visibility="visible"
            />
        	<TextView android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtSeteLite"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:text="setelite values in current location"
            android:gravity="center_horizontal"
            />
    </TableRow>
    <TableRow>
        	<Button android:text=""
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnGPSValues"
            android:onClick="getGPSValues"
            android:layout_marginRight="10dp"
            android:background="@drawable/gps_value"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            
            />
        	<Button android:text=""
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnSaveNext"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:onClick="savenext"            
            android:background="@drawable/save_next"
            android:textStyle="bold"
            />
    </TableRow>
</TableLayout>
</ScrollView>