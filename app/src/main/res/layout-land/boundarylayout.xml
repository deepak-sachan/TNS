<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#d8e9ec">    

    <TextView android:id="@+id/txtTitle"
        android:text="Boundary layout"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"        
        android:textStyle="bold"></TextView>
    
    <ListView android:id="@+id/lstBoundaryLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"        
        android:scrollbars="vertical"
        android:layout_marginTop="3dp"></ListView>
    
    <Button android:id="@+id/btnSubmitBoundaryLayoutDetails"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text=""        
        android:textStyle="bold"
        android:background="@drawable/save_next"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        ></Button>
    
</LinearLayout>