<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">    

    
    <TextView android:id="@+id/txtSiteID"        
        android:layout_width="350dp"
        android:layout_height="wrap_content"    
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#000000"
        ></TextView>
    
    <TextView android:id="@+id/txtSiteName"        
        android:layout_width="350dp"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSiteID"
        android:textColor="#000000"
        android:textStyle="bold"></TextView>
    
	<TextView android:id="@+id/txtSiteAddress"        
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtSiteName"></TextView>
	
    
    <TextView android:id="@+id/txtCircle"        
        android:layout_width="50dp"
        android:textSize="9sp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtSiteAddress"
        android:background="#00a8ff">        
    </TextView>
    
    <TextView android:id="@+id/txtHidden"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:visibility="gone"></TextView>

    <Button
        android:id="@+id/btnImgSave"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:background="@drawable/upload_image"
        android:text="" />

    <Button
        android:id="@+id/btnDataSave"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnImgSave"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:background="@drawable/upload_data"
        android:text="" />

</RelativeLayout>