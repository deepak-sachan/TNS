<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#d8e9ec">    

     
    <TextView android:id="@+id/txtTitle"
        android:text="Building Mapping Details"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"        
        android:textStyle="bold"></TextView>
    
    
    <ListView android:id="@+id/lstBuildingMappingDetails"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"        
        android:scrollbars="vertical"></ListView>
     
    
    <Button android:id="@+id/btnSubmitBuildingMappingDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""        
        android:textStyle="bold"
        android:background="@drawable/save_next"></Button>
     
    
</LinearLayout>