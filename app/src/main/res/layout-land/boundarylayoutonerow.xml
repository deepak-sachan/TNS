<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">    

     <TextView
        android:id="@+id/verticalline"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/listDivider"
        android:gravity="center_horizontal"
        /> 
    
    <TextView android:id="@+id/txtBoundaryDescription"        
        android:layout_width="280dp"
        android:textSize="9sp"         
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"></TextView>
     <TextView
        android:id="@+id/verticalline"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/listDivider"
        android:gravity="center_horizontal"
        /> 
    
   <EditText android:id="@+id/edDistance"
        android:layout_width="280dp"
       android:textSize="9sp"         
       android:imeOptions="actionDone"
    	android:singleLine="true"
    	android:inputType="textNoSuggestions|textFilter|number"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" ></EditText>
    <TextView
        android:id="@+id/verticalline"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/listDivider"
        android:gravity="center_horizontal"
        /> 
   
   <TextView android:id="@+id/txtBoundaryCornerNo"        
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"></TextView>
</LinearLayout>